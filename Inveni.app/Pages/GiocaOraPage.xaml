<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:Inveni.App.ViewModels"
             x:Class="Inveni.App.Pages.GiocaOraPage"
             Title="GIOCA ORA">

    <ContentPage.BindingContext>
        <viewmodels:GiocaOraViewModel />
    </ContentPage.BindingContext>

    <Grid RowDefinitions="Auto, *">

        <!-- MENU SCHEDE SECONDARIE ORIZZONTALE CON MATERIAL ICONS -->
        <ScrollView Grid.Row="0" 
                    Orientation="Horizontal"
                    HorizontalScrollBarVisibility="Never">

            <HorizontalStackLayout x:Name="MenuTabs"
                                   Spacing="0" 
                                   HeightRequest="60"
                                   BackgroundColor="#F5F5F5">

                <!-- SCHEDA 1: VICINO A ME (selezionata default) -->
                <Border x:Name="TabVicino"
                        StrokeThickness="0"
                        Padding="15,10"
                        BackgroundColor="#1A237E"
                        HeightRequest="60"
                        WidthRequest="130">

                    <Border.GestureRecognizers>
                        <TapGestureRecognizer 
                            Command="{Binding TabChangedCommand}"
                            CommandParameter="0"/>
                    </Border.GestureRecognizers>

                    <VerticalStackLayout Spacing="4" HorizontalOptions="Center">
                        <!-- Icona Material Icons: my_location FILLED -->
                        <Label Text="&#xE55C;"
                               FontFamily="MaterialIcons"
                               FontSize="20"
                               TextColor="White"
                               HorizontalOptions="Center"/>
                        <Label Text="VICINO A ME"
                               FontSize="11"
                               FontAttributes="Bold"
                               TextColor="White"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </Border>

                <!-- SCHEDA 2: PER COMUNE -->
                <Border x:Name="TabComune"
                        StrokeThickness="0"
                        Padding="15,10"
                        BackgroundColor="Transparent"
                        HeightRequest="60"
                        WidthRequest="130">

                    <Border.GestureRecognizers>
                        <TapGestureRecognizer 
                            Command="{Binding TabChangedCommand}"
                            CommandParameter="1"/>
                    </Border.GestureRecognizers>

                    <VerticalStackLayout Spacing="4" HorizontalOptions="Center">
                        <!-- Icona Material Icons: map OUTLINED -->
                        <Label Text="&#xE55B;"
                               FontFamily="MaterialIcons"
                               FontSize="20"
                               TextColor="#666666"
                               HorizontalOptions="Center"/>
                        <Label Text="PER COMUNE"
                               FontSize="11"
                               TextColor="#666666"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </Border>

                <!-- SCHEDA 3: ORGANIZZATORI -->
                <Border x:Name="TabOrganizzatori"
                        StrokeThickness="0"
                        Padding="15,10"
                        BackgroundColor="Transparent"
                        HeightRequest="60"
                        WidthRequest="130">

                    <Border.GestureRecognizers>
                        <TapGestureRecognizer 
                            Command="{Binding TabChangedCommand}"
                            CommandParameter="2"/>
                    </Border.GestureRecognizers>

                    <VerticalStackLayout Spacing="4" HorizontalOptions="Center">
                        <!-- Icona Material Icons: groups OUTLINED -->
                        <Label Text="&#xEA21;"
                               FontFamily="MaterialIcons"
                               FontSize="20"
                               TextColor="#666666"
                               HorizontalOptions="Center"/>
                        <Label Text="ORGANIZZATORI"
                               FontSize="11"
                               TextColor="#666666"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </Border>

                <!-- SCHEDA 4: IN EVIDENZA -->
                <Border x:Name="TabEvidenza"
                        StrokeThickness="0"
                        Padding="15,10"
                        BackgroundColor="Transparent"
                        HeightRequest="60"
                        WidthRequest="130">

                    <Border.GestureRecognizers>
                        <TapGestureRecognizer 
                            Command="{Binding TabChangedCommand}"
                            CommandParameter="3"/>
                    </Border.GestureRecognizers>

                    <VerticalStackLayout Spacing="4" HorizontalOptions="Center">
                        <!-- Icona Material Icons: star OUTLINED -->
                        <Label Text="&#xE838;"
                               FontFamily="MaterialIcons"
                               FontSize="20"
                               TextColor="#666666"
                               HorizontalOptions="Center"/>
                        <Label Text="IN EVIDENZA"
                               FontSize="11"
                               TextColor="#666666"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </Border>

            </HorizontalStackLayout>
        </ScrollView>

        <!-- CONTENUTO PRINCIPALE: Logo + stato -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="20" Spacing="30" 
                                 VerticalOptions="Center"
                                 HorizontalOptions="Center">

                <!-- LOGO INVENI -->
                <Image Source="logo_inveni.png"
                       HeightRequest="120"
                       WidthRequest="120"
                       HorizontalOptions="Center"/>

                <Label Text="VICINO A TE"
                       FontSize="24"
                       FontAttributes="Bold"
                       TextColor="#1A237E"
                       HorizontalOptions="Center"/>

                <Label Text="Cacce attive piÃ¹ vicine alla tua posizione"
                       FontSize="16"
                       TextColor="#666666"
                       HorizontalOptions="Center"/>

                <ActivityIndicator IsRunning="True"
                                   Color="#D84315"
                                   HorizontalOptions="Center"/>

                <Label Text="Implementazione in arrivo..."
                       FontSize="14"
                       TextColor="#757575"
                       HorizontalOptions="Center"/>

            </VerticalStackLayout>
        </ScrollView>

    </Grid>

</ContentPage>