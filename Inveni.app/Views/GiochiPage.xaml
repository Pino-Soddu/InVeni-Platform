<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Inveni.App.Views.GiochiPage"
             Title="Cacce">

    <Grid RowDefinitions="Auto, *">

        <!-- Header con titolo -->
        <StackLayout Grid.Row="0" 
                     Padding="20,10"
                     BackgroundColor="{AppThemeBinding Light=#2196F3, Dark=#1976D2}">

            <Label Text="{Binding Titolo}"
                   FontSize="20"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalOptions="Center"/>

        </StackLayout>

        <!-- Lista cacce -->
        <RefreshView Grid.Row="1"
                     IsRefreshing="{Binding IsLoading}">

            <CollectionView ItemsSource="{Binding Giochi}"
                            SelectionMode="None">

                <CollectionView.ItemTemplate>
                    <DataTemplate>

                        <!-- Card singola caccia con Border (non Frame) -->
                        <Border Margin="15,8"
                                Padding="15"
                                StrokeThickness="0"
                                BackgroundColor="{AppThemeBinding Light=White, Dark=#2D2D2D}">

                            <Border.Shadow>
                                <Shadow Brush="Black"
                                        Offset="0,2"
                                        Opacity="0.2"
                                        Radius="5"/>
                            </Border.Shadow>

                            <Grid ColumnDefinitions="Auto, *"
                                  RowDefinitions="Auto, Auto, Auto">

                                <!-- Icona -->
                                <Image Grid.Row="0" Grid.Column="0"
                                       Grid.RowSpan="3"
                                       Source="dotnet_bot.png"
                                       WidthRequest="50"
                                       HeightRequest="50"
                                       Margin="0,0,15,0"/>

                                <!-- Nome caccia -->
                                <Label Grid.Row="0" Grid.Column="1"
                                       Text="{Binding name}"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="{AppThemeBinding Light=Black, Dark=White}"/>

                                <!-- Comune -->
                                <Label Grid.Row="1" Grid.Column="1"
                                       Text="{Binding comune}"
                                       FontSize="14"
                                       TextColor="{AppThemeBinding Light=#666666, Dark=#AAAAAA}"
                                       Margin="0,5,0,0"/>

                                <!-- Numero tappe -->
                                <Label Grid.Row="2" Grid.Column="1"
                                       Text="{Binding numTappeCaccia, StringFormat='{0} tappe'}"
                                       FontSize="12"
                                       TextColor="{AppThemeBinding Light=#2196F3, Dark=#64B5F6}"
                                       Margin="0,5,0,0"/>

                            </Grid>

                        </Border>

                    </DataTemplate>
                </CollectionView.ItemTemplate>

                <!-- Messaggio se lista vuota -->
                <CollectionView.EmptyView>
                    <StackLayout VerticalOptions="Center"
                                 HorizontalOptions="Center"
                                 Padding="40">

                        <Label Text="Caricamento cacce..."
                               FontSize="16"
                               HorizontalOptions="Center"/>

                    </StackLayout>
                </CollectionView.EmptyView>

            </CollectionView>

        </RefreshView>

        <!-- Indicatore caricamento -->
        <ActivityIndicator Grid.RowSpan="2"
                           IsRunning="{Binding IsLoading}"
                           IsVisible="{Binding IsLoading}"
                           Color="#2196F3"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"/>

    </Grid>

</ContentPage>